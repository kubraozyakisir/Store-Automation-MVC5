@using StockTrackingSystem.Models.Entity;
@model List<Order>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>ORDERS</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>PRODUCT</th>
        <th>EMPLOYEE</th>
        <th>CUSTOMER</th>
        <th>PRICE</th>
        <th>DATE</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Product.Name</td>
            <td>@item.Employee.Name</td>
            <td>@item.Customer.Name</td>
            <td>@item.Price</td>
            <td>@item.Date</td>
            <td><a href="/Order/NewOrder/@item.Id" class="btn btn-danger">NEW ORDER</a></td>
            
        </tr>
    }

</table>   