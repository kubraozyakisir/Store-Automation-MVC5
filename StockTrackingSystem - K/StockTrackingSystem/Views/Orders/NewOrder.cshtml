@model StockTrackingSystem.Models.Entity.Order
@{
    ViewBag.Title = "NewOrder";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>ADD A NEW ORDER</h2>
<br />
<form method="post">
    <h2>Add A New Order</h2>
    <br />
    <label>Product</label>
    @Html.DropDownListFor(x => x.Product.ID, (List<SelectListItem>)ViewBag.drop1, new { @class = "form-control" })
    <br />
    <label>Employee</label>
    @Html.DropDownListFor(x => x.Employee.Id, (List<SelectListItem>)ViewBag.drop2, new { @class = "form-control" })
    <br />
    <label>Customer</label>
    @Html.DropDownListFor(x => x.Customer.Id, (List<SelectListItem>)ViewBag.drop3, new { @class = "form-control" })
    <br />
    <label>Price</label>
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
   

    <br />
    <button class="btn btn-info">ORDER</button>
</form>
