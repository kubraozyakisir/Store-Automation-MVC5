@model StockTrackingSystem.Models.Entity.Customer
@{
    ViewBag.Title = "CustomerGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm("CustomerUpdate", "Customer", FormMethod.Post))
{
    <h2>Update Category</h2>
    <br />
    @Html.TextBoxFor(x => x.Id, new { @class = "form-control" })
    <br />
    <label>Brand</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    <label>Stock</label>
    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
    <br />
    <label>PurchasePrice</label>
    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    <br />
    <label>SalePrice</label>
    @Html.TextBoxFor(x => x.Balance, new { @class = "form-control" })
    <br />
    <br />
    <button class="btn btn-info">Update</button>

}